<%- include('partials/header') %>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">

            <label for="postTitle">Title</label>
            <input class="form-control" name="pTitle" id="postTitle" >
            <!-- name attribute is used for body parsing the entered input -->

            <label for="postContent">Post</label>
            <textarea class="form-control" name="pContent" id="postContent" cols="170" rows="5"></textarea>
        </div>


        <button type="submit" value="" class="btn btn-primary">Publish</button>
    </form>

    <%- include('partials/footer') %>